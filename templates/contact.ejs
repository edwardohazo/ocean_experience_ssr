<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="<%= cssPaths.styles %>">
    <link rel="stylesheet" href="<%= cssPaths.waves %>">
    <link rel="stylesheet" href="<%= cssPaths.serviceDescription %>">
    <link href="<%= cssPaths.fontAwesome %>" rel="stylesheet" />
    <title><%= pageTitle %></title>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo-container">
            <img class="logo-img" src="<%= logoImg %>" alt="<%= logoAlt %>">
        </div>
        <nav class="desktop-nav">
            <ul>
                <% navLinks.forEach(link => { %>
                <li>
                    <a href="<%= link.href %>"><%= link.text %></a>
                </li>
                <% }) %>
            </ul>
        </nav>

        <button class="burger" id="burgerMenu">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </header>

    <!-- Fullscreen Navigation for Mobile -->
    <nav class="mobile-nav" id="navMenu">
        <button class="close" id="closeMenu">&times;</button>
        <% navLinks.forEach(link => { %>
        <a href="<%= link.href %>"><%= link.text %></a>
        <% }) %>
    </nav>

    <!-- Main Content -->
    <main>
        <section class="main-section-one-contact">
            <script charset="utf-8" type="text/javascript" src="<%= hubspotForm.src %>"></script>
            <script>
              hbspt.forms.create({
                portalId: "<%= hubspotForm.portalId %>",
                formId: "<%= hubspotForm.formId %>"
              });
            </script>
        </section>
    </main>

    <!-- Footer Content -->
    <footer class="footer">
        <div class="footer__social-links">
            <ul class="footer__social-list">
                <% socialLinks.forEach(link => { %>
                <li class="footer__social-item">
                    <a href="<%= link.href %>" class="footer__social-link">
                        <i class="<%= link.iconClass %>"></i>
                    </a>
                </li>
                <% }) %>
            </ul>
        </div>
        
        <div class="footer__info">
            <p class="footer__info-text"><%= footerInfo %></p>
        </div>
    
        <div class="footer__copyright">
            <p>&copy; <%= footerCopyright %></p>
        </div>
    </footer>
    

    <!-- Javascript -->
    <script src="<%= scripts.script %>"></script>
    <script src="<%= scripts.burgerMenu %>"></script>
    <script src="<%= scripts.goto %>"></script>
</body>
</html>
