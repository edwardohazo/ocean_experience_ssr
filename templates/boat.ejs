<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/styles.css">
    <link rel="stylesheet" href="../public/css/waves.css">
    <link rel="stylesheet" href="../public/css/service-description.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <title><%= title %></title>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo-container">
            <img class="logo-img" src="<%= logo.src %>" alt="<%= logo.alt %>">
        </div>
        <nav class="desktop-nav">
            <ul>
                <% navLinks.forEach(link => { %>
                    <li>
                        <a href="<%= link.href %>"><%= link.text %></a>
                    </li>
                <% }); %>
            </ul>
        </nav>

        <button class="burger" id="burgerMenu">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </header>

    <!-- Fullscreen Navigation for Mobile -->
    <nav class="mobile-nav" id="navMenu">
        <button class="close" id="closeMenu">&times;</button>
        <% navLinks.forEach(link => { %>
            <a href="<%= link.href %>"><%= link.text %></a>
        <% }); %>
    </nav>

    <!-- Main Content -->
    <main>
        <!-- Boat Trip Section -->
        <section class="main-section-one main-section-one-boat">
            <h1><%= mainSection.title %></h1>
            <h2><%= mainSection.subtitle %></h2>
            <button class="contact-us-button">
                <a href="#boat-contact-form"><%= mainSection.cta.text %></a>
            </button>
        </section>

        <!-- Boat Trip Details Section -->
        <section class="all-details-section">
            <div class="container">
                <div class="section-header">
                    <h2><%= details.title %></h2>
                    <p><%= details.description %></p>
                </div>
                <div class="features-grid">
                    <% details.features.forEach(feature => { %>
                        <div class="feature-item">
                            <img src="<%= feature.img.src %>" alt="<%= feature.img.alt %>">
                            <h4><%= feature.title %></h4>
                            <p><%= feature.description %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section class="main-section-one-contact" id="boat-contact-form">
            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
            <script>
                hbspt.forms.create({
                    portalId: "<%= hubspot.portalId %>",
                    formId: "<%= hubspot.formId %>"
                });
            </script>
        </section>

        
    </main>
    
    <!-- Footer Content -->
    <footer class="footer">
        <div class="footer__social-links">
            <ul class="footer__social-list">
                <% footer.socialLinks.forEach(link => { %>
                    <li class="footer__social-item">
                        <a href="<%= link.href %>" class="footer__social-link">
                            <i class="<%= link.icon %>"></i>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </div>
        <div class="footer__info">
            <p class="footer__info-text"><%= footer.infoText %></p>
        </div>
        <div class="footer__copyright">
            <p><%= footer.copyright %></p>
        </div>
    </footer>

    <!-- Javascript -->
    <script src="../src/scripts/script.js"></script>
    <script src="../src/scripts/burguerMenu.js"></script>
    <script src="./utils/goto.js"></script>
</body>
</html>
